{
  "name": "smart-collab",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:gateway": "pnpm --filter api-gateway start:dev",
    "dev:auth": "pnpm --filter auth start:dev",
    "dev:project": "pnpm --filter project start:dev",
    "dev:task": "pnpm --filter task start:dev",
    "dev:notification": "pnpm --filter notification start:dev",
    "dev:realtime": "pnpm --filter realtime start:dev",
    "dev:ai": "pnpm --filter ai start:dev",
    "dev:all": "pnpm -r run start:dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --fix",
    "test": "turbo run test",
    "check-types": "turbo run check-types",
    "format": "turbo run format",
    "format:fix": "turbo run format --fix",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "cd apps/auth && npx prisma generate",
    "db:push": "cd apps/auth && npx prisma db push",
    "db:migrate": "cd apps/auth && npx prisma migrate dev",
    "db:studio": "cd apps/auth && npx prisma studio"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "^3.6.0",
    "tailwindcss": "^4.1.13",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9.0.0"
  }
}
