generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_POSTGRE")
}

model UserCache {
  id        String   @id                // tá»« Mongo (Auth)
  email     String   @unique
  firstName String?
  lastName  String?
  avatar    String?
  role      String
  updatedAt DateTime @updatedAt

  projects  Project[] @relation("ProjectOwner")
  members   ProjectMember[]
}

model Project {
  id          String          @id @default(uuid())
  name        String
  description String?
  ownerId     String
  folderPath  String?         @unique   
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  owner       UserCache       @relation("ProjectOwner", fields: [ownerId], references: [id])
  members     ProjectMember[]
}

model ProjectMember {
  id        String   @id @default(uuid())
  projectId String
  userId    String
  role      String   @default("MEMBER")

  project   Project   @relation(fields: [projectId], references: [id])
  user      UserCache @relation(fields: [userId], references: [id])
   
  @@unique([projectId, userId])
}
