{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@mood/*": ["./src/*"],
      "@mood/components/*": ["./src/components/*"],
      "@mood/lib/*": ["./src/lib/*"],
      "@mood/hooks/*": ["./src/hooks/*"],
      "@mood/providers/*": ["./src/providers/*"],
      "@mood/store/*": ["./src/store/*"],
      "@mood/services/*": ["./src/services/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
